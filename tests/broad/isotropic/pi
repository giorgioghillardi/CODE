# BASIC SOFT RUN SCRIPT
#
# This script defines basic settings.
# #######

magnetic_field = MF_UnitQ;
particle_generator = PGen;
particle_pusher = PPusher;
tools = rad;
num_threads = 20;

@MagneticField MF_UnitQ {
    type = analytical;
    B0 = 5.0;
    Rm = 1.7;
    rminor = 0.5;
    qtype  = constant;
    qa1 = 0.5;
}

@ParticleGenerator PGen {
    #a = 0.05,0.95,100;
    #a = 0.55,0.95,100;
    a = 0,0.45,100;
    p=10,10,1;
    thetap=0.2,0.2,1;
}

@ParticlePusher PPusher {
    equation = guiding-center;
    timeunit = poloidal;
    time = 1;
    nt = 1000;
}

@Equation guiding-center {
    method = rkdp45;
    tolerance = 1e-5;
}

# Tool stuff
@Radiation rad {
    detector = det;
    ntoroidal = 1500;
    #ntoroidal = 100;
    model = isotropic;
    output = image topview;
}
@Detector det {
    aperture = 0.006;
    direction = 0,1,0;
    position = 0,-2.5,-0.2;
    vision_angle = 1.1 fov;
    #vision_angle = 0.8 fov;
}
@RadiationModel isotropic {
    value = 1.0;
}
@RadiationOutput image {
    output = isotropic.mat;
    pixels = 1000;
}
@RadiationOutput topview {
    output = topview.mat;
    pixels = 1000;
}
