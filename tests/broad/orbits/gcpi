# BASIC SOFT RUN SCRIPT
#
# This script defines basic settings.
# #######

magnetic_field = MF_UnitQ;
particle_generator = PGen;
particle_pusher = PPusher;
tools = orbits;
include_drifts = yes;
#include_drifts = no;

@MagneticField MF_UnitQ {
    type = analytical;
    B0 = 2.0;
    Rm = 1.7;
    rminor = 0.5;
    qtype  = constant;
    qa1 = 1.0;
}

@ParticleGenerator PGen {
    a = 0.95,0.95,1;
    p=10,10,1;
    thetap=0.2,0.2,1;
}

@ParticlePusher PPusher {
    equation = guiding-center;
    timeunit = seconds;
    time = 5e-8;
    nt = 100;
}

@EquationGuidingCenter guiding-center {
    method = rkdp45;
    tolerance = 1e-5;
}

@Orbits orbits {
    #output = gc-orbit.mat;
    output = gc-orbit-drifts.mat;
}
