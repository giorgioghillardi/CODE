# BASIC SOFT RUN SCRIPT
#
# This script defines basic settings.
# #######

magnetic_field = MF_UnitQ;
particle_generator = PGen;
particle_pusher = PPusher;
tools = rad;
num_threads = 20;

@MagneticField MF_UnitQ {
    type = analytical;
    B0 = 5.0;
    Rm = 1.7;
    rminor = 0.5;
    qtype  = constant;
    qa1 = 1.0;
    sigmaB = ccw;
}

@ParticleGenerator PGen {
    a = 0,0.95,100;
    p=60,60,1;
    thetap=0.2,0.2,1;
}

@ParticlePusher PPusher {
    equation = guiding-center;
    timeunit = poloidal;
    time = 1;
    nt = 1000;
}

@Equation guiding-center {
    method = rkdp45;
    tolerance = 1e-5;
}

# Tool stuff
@Radiation rad {
    detector = det;
    ntoroidal = 7000;
    model = cone;
    output = image topview;
}
@Detector det {
    aperture = 0.006;
    direction = 0,1.0,0;
    position = 1.7,-1.7,0;
    #position = 0.2,-2.5,0;
    vision_angle = 0.70 fov;
    #spectrum = 700e-9,800e-9,10;
    spectrum = no;
}
@RadiationModel cone {
    emission = synchrotron;
    projection = original;
}
@RadiationOutput image {
    output = cone.mat;
    pixels = 1000;
}
@RadiationOutput topview {
    output = topview.mat;
    pixels = 1000;
}
