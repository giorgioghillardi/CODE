# BASIC SOFT RUN SCRIPT
#
# This script defines basic settings.
# #######

magnetic_field = MF_UnitQ;
particle_generator = PGen;
particle_pusher = PPusher;
tools = rad;
num_threads = 4;
include_drifts = no;

@MagneticField MF_UnitQ {
    type = analytical;
    B0 = 2.0;
    Rm = 1.7;
    rminor = 0.5;
    qtype  = constant;
    qa1 = 1.0;
    sigmaB = ccw;
}

@ParticleGenerator PGen {
    #a=0,0.95,200;
    a=0,0.95,20;
    #p=30,40,2;
    #thetap=0.15,0.20,2;
    p=30,30,1;
    thetap=0.15,0.15,1;
}

@ParticlePusher PPusher {
    equation = guiding-center;
    timeunit = poloidal;
    time = 1;
    nt = 1000;
}

@Equation guiding-center {
    method = rkdp45;
    tolerance = 1e-9;
}

# Tool stuff
@Radiation rad {
    detector = det;
    ntoroidal = 2500;
    model = cone;
    #output = green;
    output = image;
    wall_opacity = transparent;
}
@Detector det {
    aperture = 0.006;
    direction = 0,1.0,0;
    position = 1.7,-1.7,0;
    vision_angle = 0.70 fov;
    spectrum = no;
}
@RadiationModel cone {
    emission = synchrotron;
    projection = reverse;
}
@RadiationOutput green {
    output = green.mat;
    pixels = 300;
    format = "12ij";
}
@RadiationOutput image {
    output = image.mat;
    pixels = 300;
}

